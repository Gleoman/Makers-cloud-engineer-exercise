<h1>New Review</h1>

    <% if flash[:notice] %>
      <div class="notice"><%= flash[:notice] %></div>
    <% end %>

  <%= form_for @review, url: {action: "create"}, html: {class: "review_form"} do |form| %>

  	<p>
    	<%= form.label :rating %><br>
    	<div id="1">
      	<%= form.radio_button(:rating, 1) %>
      	<%= label_tag(:rating, "1") %>
    	</div>
    	<div id="2">
      	<%= form.radio_button(:rating, 2) %>
      	<%= label_tag(:rating, "2") %>
    	</div>
    	<div id="3">
      	<%= form.radio_button(:rating, 3) %>
      	<%= label_tag(:rating, "3") %>
    	</div>
    	<div id="4">
      	<%= form.radio_button(:rating, 4) %>
      	<%= label_tag(:rating,"4") %>
    	</div>
    	<div id="5">
      	<%= form.radio_button(:rating, 5) %>
      	<%= label_tag(:rating, "5") %>
    	</div>
  	</p>

  	<p>
    	<%= form.submit "Submit" %>
  	</p>
	<% end %>
